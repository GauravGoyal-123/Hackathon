<%layout('layouts/boilerplate')-%>

<nav>
  <div class="row my-4">
    <div class="col-lg-3 my-4 mx-3">
      <h2 class="multicolortext">DoubtAway..</h2>
    </div>
    <div class="col-lg-4 my-4 community">
      <span><a href="/">Home</a></span>
      <span><a href="/problem">Problems</a></span>
      <span><a href="/newproblem">Ask a question</a></span>
    </div>
    <div class="col-lg-4 my-4 login">

      <div class="dropdown">
          <button class="btn btn-dark dropdown-toggle" style="background-color: transparent; border: 1px solid white;" type="button" id="dropdownMenuButton2" data-bs-toggle="dropdown" aria-expanded="true">
              <span><i class="fas fa-user icon"></i></span>
          </button>
          <ul class="dropdown-menu dropdown-menu-transparent" aria-labelledby="dropdownMenuButton2">
            <li><a class="dropdown-item" href="/profile">Profile</a></li>
            <%if(!currentUser){%>
              <li><a class="dropdown-item" href="/">Login</a></li>
            <%}else{%>
              <li><a class="dropdown-item" href="/logout">Logout</a></li>
            <%}%>
          </ul>
        </div>
    </div>
  </div>
</nav>

<section>
  <div class="row mb-4" style="border: 1px solid black;">
    <!-- Detail -->
    
    <div class="col-lg-6">
      <div>
        <p>Username : <%=user.username%> </p>
        <p>Email-id : <%=user.email%></p>
        <p>Question Asked : <span id="ques"> <%=a%> </span> </p>
        <p>Question Solved : <span id="ans"> <%=b%> </span> </p>
      </div>
    </div>
    
    <!-- Pie chart -->
    <div class="col-lg-6" style="background-color: transparent;">
      <div class="chart">
        <div class="row">
          <div class="col">
            <div id="piechart">
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="row mb-4">
    <!-- Questions -->
    <div class="col-lg-6">
      <h3>Question Asked</h3>
      <%for(let q of user.ques){%>
          <p><a href="/problem/<%=q._id%>/answer"><%=q.statement%></a> </p>
      <%}%>
    </div>

    <!-- Answer -->
    <div class="col-lg-6">
      <h3>Question Solved</h3>
      <%for(let a of user.ans){%>
          <p><a href="/problem/<%=a.problemid%>/discuss"><%=a.description%></a> </p>
      <%}%>
    </div>
  </div>
</section>


<script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
    <script type="text/javascript">
      google.charts.load('current', {'packages':['corechart']});
      google.charts.setOnLoadCallback(drawChart);
        const noofques=parseInt(document.getElementById('ques').innerHTML);
        const noofans=parseInt(document.getElementById('ans').innerHTML);
        function drawChart() {
        const tot=noofans+noofques;
        var data = google.visualization.arrayToDataTable([
          ['Task', 'Hours per Day'],
          [' No of Questions asked',     noofques],
          [' No of Questions answered',     noofans],
          ['Other', (tot===0)?100:0],

          
        ]);

        var options = {
          title: ''
         
        
       
        };

        var chart = new google.visualization.PieChart(document.getElementById('piechart'));

        chart.draw(data, options);
      }
    </script>



