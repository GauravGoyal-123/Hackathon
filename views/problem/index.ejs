<%layout('layouts/boilerplate')-%>
<div class="row">
    <div class="col-lg-2 m-2 topic">
        <h2>Topic</h2>
        <i class="fa-solid fa-users"></i>
        <hr>
        <ul style="list-style: none;" class="topicname">
            <li><a href="/problem/array">Array</a></li>
            <li><a href="/problem/strings">Strings</a></li>
            <li><a href="/problem/recursion">Recursion</a></li>
            <li><a href="/problem/hashing">Hashing</a></li>
            <li><a href="/problem/stacks">Stacks</a></li>
            <li><a href="/problem/queue">Queue</a></li>
            <li><a href="/problem/trees">Trees</a></li>
            <li><a href="/problem/graphs">Graphs</a></li>
            
        </ul>
    </div>
        

   <div class="col-lg-8 m-2">
        <%-include('../partials/flash')%>
        <div class="row m-2">
            <div class="col-lg-10">
                <h1 class="heading">Let your Doubts</h1>
                <h2 class="heading">Fly Away...</h2>
                <h3 style="font-size: 25px;">Turn in to acclerate your programing in right direction</h3>
                <button style="font-size: 30px; border-radius: 30px; background-color: rgb(243, 151, 212);" type="button" class="btn btn-dark"><a style="text-decoration: none; color: black;" href="/newproblem">Ask your Question</a></button>
            </div>

        </div>

            <%for(let p of prblm){%>
                <ul class="container ques">
                    <div>
                        <div class="row mb-3">
                            <div class="col-lg-4 head" style="border-right: 1px solid gray;">
                                Topic: <%=p.topic%>
                            </div>
                            <div class="col-lg-4 head" style="border-right: 1px solid gray;">
                                Language: <%=p.lang%>
                            </div>
                            <div class="col-lg-4 head">
                                Level: <%=p.level%>
                            </div>

                        </div>

                        <div class="row">
                            <div class="col-lg-12 md-12 pro" style="font-weight: bolder;">
                                <p><%=p.statement.substring(0,200)%>...</p>
                            </div>

                        </div>
                        
                         
                    </div>
                    <div class="row">
                        <div class="col-lg-10">

                        </div>
                        <div class="col-lg-2">
                            <button style=" font-size: 1.1rem; font-family: cursive; font-weight: bold; background-color: azure;"" type="button" class="btn btn-dark"><a style="text-decoration: none; color: rgb(26, 25, 25);" href="/problem/<%=p._id%>/answer">Answer</a></button>
                        </div>
                    </div>
                </ul>
            <%}%>

    </div>

</div>